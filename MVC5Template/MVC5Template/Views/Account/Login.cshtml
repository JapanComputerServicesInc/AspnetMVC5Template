@model MVC5Template.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = HttpContext.GetGlobalResourceObject("ResourceTitle", "Login_Title");
}

@section styles {
    <link href="~/Content/App_Style/Login.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    <div class="container">
        @*@Html.ValidationSummary()*@
        <div class="placeholder center-block">
            @Html.ValidationMessage("Login_Error", new { @class = "text-danger" })
            <div class="well">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserID,
                    new
                    {
                        maxlength = "6",
                        id = "inputUserID",
                        @class = "form-control",
                        placeholder = HttpContext.GetGlobalResourceObject("ResourceElementValue", "Login_UserID").ToString()
                    })
                    @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password,
                    new
                    {
                        maxlength = "30",
                        id = "inputPassword",
                        @class = "form-control",
                        placeholder = HttpContext.GetGlobalResourceObject("ResourceElementValue", "Login_Password").ToString()
                    })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="@HttpContext.GetGlobalResourceObject("ResourceElementValue", "Login_btnLogin").ToString()" name="btnLogin" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
}
