@model MVC5Template.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_SigninLayout.cshtml";
    ViewBag.Title = "Login";
}

@Html.ValidationSummary(true)

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    <div class="form-signin">
        <h2 class="form-signin-heading">@HttpContext.GetGlobalResourceObject("GlRes", "Login_Please_Login")</h2>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, HttpContext.GetGlobalResourceObject("GlRes", "Login_UserName").ToString(), new { @for = "inputUserID", @class = "sr-only" })
            @Html.TextBoxFor(m => m.UserName, new { id = "inputUserID", @class = "form-control", placeholder = "User ID", required = "", autofocus = "" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, HttpContext.GetGlobalResourceObject("GlRes", "Login_Password").ToString(), new { @for = "inputPassword", @class = "sr-only" })
            @Html.TextBoxFor(m => m.Password, new { id = "inputPassword", @class = "form-control", placeholder = "Password", required = "", autofocus = "" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="@HttpContext.GetGlobalResourceObject("GlRes", "Login_btnLogin").ToString()" name="btnLogin" />
    </div>
}
